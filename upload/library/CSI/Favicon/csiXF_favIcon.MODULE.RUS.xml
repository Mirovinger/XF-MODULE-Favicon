  <link rel="shortcut icon" href="{$xenOptions.boardUrl}/favicon.ico" type="image/x-icon" />
<xen:else />
  <link rel="icon" href="{$xenOptions.boardUrl}/{xen:property imagePath}/favicon.ico" type="image/x-icon" />
